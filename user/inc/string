#ifndef __STRING
#define __STRING

#include <arch.hpp>
#include <vector>

bool isspace(char c);

namespace std {
	class string {
	public:
		explicit string();
		string(const string &r);
		string(const char *s);
		string(const char *s, u32 n);
		~string();

		bool operator ==(const char *c) const;

		const char &operator[](u32 pos) const;
		char &operator[](u32 pos);

		u32 length() const;
		const char *c_str() const;

		string substr(u32 pos, u32 n=(u32)-1) const;
		string trim() const;
		vector<string> split() const;

	private:
		char *_str;
		u32 _length;	// Excluding trailing NUL.
	};
}

#endif

